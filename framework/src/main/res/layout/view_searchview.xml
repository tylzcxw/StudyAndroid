<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y144"
              android:orientation="vertical"
              android:paddingLeft="@dimen/x65"
              android:paddingRight="@dimen/x65">
    <RelativeLayout
        android:id="@+id/search_mid_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y86"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/x29"
        android:layout_marginTop="@dimen/y29"
        android:background="@drawable/ccb_btn_style_enabled_30radius">
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y86"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/search_btn_icon"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x43"
                android:background="@mipmap/search_icon_gray"/>
            <EditText
                android:id="@+id/search_et"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y86"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入"
                android:lines="1"
                android:paddingLeft="@dimen/x14"
                android:paddingRight="@dimen/x14"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="@dimen/x37"/>
            <Button
                android:id="@+id/search_btn_clean"
                android:layout_width="@dimen/x43"
                android:layout_height="@dimen/y43"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x43"
                android:background="@mipmap/search_clearn"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>